{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true, // Optional: Generates a map file for easier debugging
        "sourceMap": true, // Optional: Generates source maps for better debugging
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
